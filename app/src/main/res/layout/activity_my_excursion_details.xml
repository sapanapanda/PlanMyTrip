<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".excursion_list.MyExcursionDetails">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>


    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Date"-->
    <!--android:layout_marginLeft="10dp"-->

    <!--android:id="@+id/date"-->
    <!--android:layout_below="@id/toolbar"-->
    <!--/>-->
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/tvDate"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:layout_below="@id/toolbar"-->
    <!--android:layout_toRightOf="@id/date"/>-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ivImage"
        android:layout_below="@id/toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details"
        android:text="Details"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ivImage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDetails"

        android:layout_margin="10dp"
        android:layout_below="@id/details"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDetails"
        android:layout_margin="10dp"
        android:id="@+id/tvPrice"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tvPrice"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="01/05/2019"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:text="Windy"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintLeft_toRightOf="@id/ivConditionIcon"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            />
        <ImageView
            android:id="@+id/ivConditionIcon"

            android:layout_width="50dp"
            android:layout_height="50dp"

            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintLeft_toRightOf="@id/tvCondition"
            android:src="@drawable/checkweather"/>

        <TextView
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvCondition"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/ivConditionIcon"
            android:text="TextView"/>

        <TextView
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/tvMin"
            app:layout_constraintTop_toBottomOf="@id/tvCondition"
            android:text="TextView"/>

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>